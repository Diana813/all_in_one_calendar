<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singleEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/date"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/widget_frame"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/dayOfAWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="start"
            android:textColor="@color/darkGreyZilla"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="Śr" />

        <TextView
            android:id="@+id/dayOfAMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/blackZilla"
            android:textSize="20sp"
            tools:text="23" />

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="start"
            android:textColor="@color/darkGreyZilla"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="Wrz" />
    </LinearLayout>


    <TextView
        android:id="@+id/startHour"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@+id/date"
        android:gravity="center"
        android:textColor="@color/whiteZilla"
        android:textSize="12sp"
        tools:text="16:00" />

    <LinearLayout
        style="@style/BackgroundLayout.LinearLayoutVerticalStyle.shortContent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="2dp"
        android:layout_toEndOf="@+id/startHour">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGreyZilla"
            android:textSize="15sp"
            tools:text="Spotkanie służbowe" />

        <TextView
            android:id="@+id/eventHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey2zilla"
            android:textSize="12sp"
            tools:text="16:00 - 17:00" />

    </LinearLayout>
</RelativeLayout>