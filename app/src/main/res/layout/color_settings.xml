<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colorSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".ColorSettings">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        card_view:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="@string/chooseColor"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/red"
                    android:layout_alignParentStart="true">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lightRed"
                        style="@style/colorPickerSmallPart"
                        card_view:cardBackgroundColor="@color/lightRed"
                        card_view:cardElevation="20dp">
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/colorPickerBigPart"
                        android:layout_below="@+id/lightRed"
                        card_view:cardBackgroundColor="#b71c1c"
                        card_view:cardElevation="20dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/wheel"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="15dp"/>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_below="@+id/red"
                    android:id="@+id/yellow"
                    android:layout_alignParentStart="true">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/lightYellow"
                        style="@style/colorPickerSmallPart"
                        card_view:cardBackgroundColor="@color/lightYellow"
                        card_view:cardElevation="20dp">
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        style="@style/colorPickerBigPart"
                        android:layout_below="@+id/lightYellow"
                        card_view:cardBackgroundColor="#ffeb3b"
                        card_view:cardElevation="20dp"
                        android:id="@+id/yellow1">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/wheel"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="15dp"/>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:id="@+id/green"
                    android:layout_toEndOf="@+id/red"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lightGreen"
                        style="@style/colorPickerSmallPart"
                        card_view:cardBackgroundColor="@color/lightGreen"
                        card_view:cardElevation="20dp">
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/colorPickerBigPart"
                        android:layout_below="@+id/lightGreen"
                        card_view:cardBackgroundColor="#64dd17"
                        card_view:cardElevation="20dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/wheel"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="15dp"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blue"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_below="@+id/green"
                    android:layout_toEndOf="@+id/yellow"
                   >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lightBlue"
                        style="@style/colorPickerSmallPart"
                        android:layout_alignParentStart="true"
                        card_view:cardBackgroundColor="@color/lightBlue"
                        card_view:cardElevation="20dp">
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/colorPickerBigPart"
                        android:layout_below="@+id/lightBlue"
                        card_view:cardBackgroundColor="#00e5ff"
                        card_view:cardElevation="20dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/wheel"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="15dp"
                            />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
