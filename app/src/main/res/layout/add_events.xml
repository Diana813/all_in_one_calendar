<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/addEventToTheList"
        style="@style/BackgroundLayout">

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/eventsLabel"
                style="@style/textViewHeaders"
                android:gravity="center_horizontal" />

            <RelativeLayout
                android:id="@+id/empty_view"
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventsLabel"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/empty_view_image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="10dp"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <TextView
                    android:id="@+id/empty_title_text"
                    style="@style/EmptyViewTextStyle"
                    android:layout_below="@id/empty_view_image" />

                <TextView
                    android:id="@+id/empty_subtitle_text"
                    style="@style/EmptyViewTextStyle.subtitle"
                    android:layout_below="@id/empty_title_text" />
            </RelativeLayout>


            <FrameLayout
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventsLabel">

                <include layout="@layout/recycleview_and_edittext" />
            </FrameLayout>
        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="35dp"
        android:src="@drawable/baseline_control_point_black_48">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</RelativeLayout>