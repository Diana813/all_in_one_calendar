<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singleItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame">

    <TextView
        android:id="@+id/dayNumber"
        style="@style/textViewCalendarDayNumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap"
        tools:text="8" />


    <ImageView
        android:id="@+id/periodImage"
        style="@style/periodImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/numberOfEvents"
        style="@style/textViewCalendarDayNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        tools:ignore="RelativeOverlap"
        tools:text="2" />

    <TextView
        android:id="@+id/shiftNumber"
        style="@style/textViewCalendarShiftNumber"
        tools:text="4" />
</RelativeLayout>

