<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#616161</item>
        <item name="colorPrimaryDark">#331107</item>
        <item name="colorAccent">#B71C1C</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:ambientShadowAlpha">0.6</item>
        <item name="android:spotShadowAlpha">0.6</item>
    </style>
    <style name="colorPickerBigPart">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">30dp</item>
    </style>

    <style name="colorPickerSmallPart">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:elevation">30dp</item>
    </style>


</resources>
