<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addEventToTheList"
    style="@style/BackgroundLayout">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventsLabel"
            style="@style/textViewHeaders"
            android:gravity="center_horizontal" />

        <RelativeLayout
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventsLabel"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/empty_view_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <TextView
                android:id="@+id/empty_title_text"
                style="@style/EmptyViewTextStyle"
                android:layout_below="@id/empty_view_image" />

            <TextView
                android:id="@+id/empty_subtitle_text"
                style="@style/EmptyViewTextStyle.subtitle"
                android:layout_below="@id/empty_title_text" />
        </RelativeLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler"
            android:layout_below="@+id/eventsLabel">

            <include layout="@layout/recycleview_and_edittext" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageAims"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/recycler"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/zegar"
            tools:ignore="ContentDescription">

        </ImageView>

    </RelativeLayout>

</ScrollView>