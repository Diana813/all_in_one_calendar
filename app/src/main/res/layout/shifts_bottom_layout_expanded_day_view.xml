<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shiftsSettingsExpandedDayView"
    style="@style/BackgroundLayout.LinearLayoutVerticalStyle"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_menu_background"
    android:backgroundTint="@color/lightOrangeZilla"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/editShift"
        style="@style/textViewHeaders"
        android:layout_width="wrap_content"
        android:layout_margin="0dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:gravity="start"
        android:text="@string/edit_shift"
        android:textColor="@color/grey3zilla"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        style="@style/textViewHeaders"
        android:layout_width="wrap_content"
        android:layout_margin="0dp"
        android:gravity="start"
        android:paddingHorizontal="20dp"
        android:textColor="@color/grey3zilla"
        android:textSize="12sp"
        tools:text="20 stycznia, 2020" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shifts_list_recycler_expanded_day_view"
        style="@style/recyclerViewShiftsBottomLayoutStyle"
        android:layout_height="300dp"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmButtonShifts"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button"
            android:text="@string/confirm_and_add"
            android:textAllCaps="false"
            android:textColor="@color/whiteZilla"
            android:textSize="18sp" />

    </FrameLayout>

</LinearLayout>