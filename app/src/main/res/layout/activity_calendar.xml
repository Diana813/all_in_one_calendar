<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackgroundLayout"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/backgroundDrawing"
        style="@style/BackgroundLayout.LinearLayoutVerticalStyle">

        <LinearLayout
            android:id="@+id/dateView"
            android:layout_weight="0.5"
            style="@style/BackgroundLayout.LinearLayoutHorizontalStyle.shortContent"
            android:layout_margin="5dp"
            android:background="#98FFFFFF"
            android:gravity="center">


            <ImageView
                android:id="@+id/calendar_prev_button"
                style="@style/nextPrevButtons"
                android:layout_marginEnd="60dp"
                android:src="@drawable/baseline_keyboard_arrow_left_black_48"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/date"
                style="@style/textViewDateStyle"
                tools:text="23 lipca 2019" />

            <ImageView
                android:id="@+id/calendar_next_button"
                style="@style/nextPrevButtons"
                android:layout_marginStart="60dp"
                android:src="@drawable/baseline_keyboard_arrow_right_black_48"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/calendarCardView"
            android:layout_weight="5"
            style="@style/cardViewCalendar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/calendarHeader"
                    style="@style/BackgroundLayout.LinearLayoutHorizontalStyle"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/textViewStyleCalendarDayOfWeek"
                        android:text="@string/Monday" />

                    <TextView
                        style="@style/textViewStyleCalendarDayOfWeek"
                        android:text="@string/Tuesday" />

                    <TextView
                        style="@style/textViewStyleCalendarDayOfWeek"
                        android:text="@string/Wednesday" />

                    <TextView
                        style="@style/textViewStyleCalendarDayOfWeek"
                        android:text="@string/Thursday" />

                    <TextView
                        style="@style/textViewStyleCalendarDayOfWeek"
                        android:text="@string/Friday" />

                    <TextView
                        style="@style/textViewStyleCalendarDayOfWeek"
                        android:text="@string/Saturday" />

                    <TextView
                        style="@style/textViewStyleCalendarDayOfWeek"
                        android:text="@string/Sunday" />
                </LinearLayout>

                <GridView
                    android:id="@+id/widgetGridView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/calendarHeader"
                    android:layout_margin="2dp"
                    android:numColumns="7">

                </GridView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            style="@style/BackgroundLayout.LinearLayoutHorizontalStyle"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="#98FFFFFF">

            <TextView
                style="@style/textViewHeaders"
                android:text="@string/weather" />

            <TextView
                style="@style/textViewHeaders"
                tools:text="29 degrees, sunny" />

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/color_settings" />

    <include layout="@layout/shifts_setting_bottom_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>



