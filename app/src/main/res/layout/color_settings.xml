<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colorSettings"
    style="@style/cardViewColorSettingsAndOverviewStyle"
    android:layout_width="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        style="@style/BackgroundLayout.LinearLayoutVerticalStyle.shortContent"
        android:background="@color/lightGrey">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/chooseColor"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView style="@style/cardViewColorSettingsAndOverviewStyle">

                    <RelativeLayout
                        android:id="@+id/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <FrameLayout
                            android:id="@+id/lightRed"
                            style="@style/colorPickerSmallPart"

                            android:background="@drawable/frame_for_other_months_weekend" />

                        <FrameLayout
                            style="@style/colorPickerBigPart"
                            android:layout_below="@+id/lightRed"
                            android:background="@drawable/red_frame">

                            <ImageView
                                style="@style/wheelStyle"
                                android:src="@drawable/wheel"
                                tools:ignore="ContentDescription" />
                        </FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/cardViewColorSettingsAndOverviewStyle">

                    <RelativeLayout
                        android:id="@+id/yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <FrameLayout
                            android:id="@+id/lightYellow"
                            style="@style/colorPickerSmallPart"

                            android:background="@drawable/frame_for_other_months_weekend_yellow" />

                        <FrameLayout
                            style="@style/colorPickerBigPart"
                            android:layout_below="@+id/lightYellow"
                            android:background="@drawable/yellow_frame">

                            <ImageView
                                style="@style/wheelStyle"
                                android:src="@drawable/wheel"
                                tools:ignore="ContentDescription" />
                        </FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/cardViewColorSettingsAndOverviewStyle">

                    <RelativeLayout
                        android:id="@+id/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <FrameLayout
                            android:id="@+id/lightGreen"
                            style="@style/colorPickerSmallPart"

                            android:background="@drawable/frame_for_other_months_weekend_green" />

                        <FrameLayout
                            style="@style/colorPickerBigPart"
                            android:layout_below="@+id/lightGreen"
                            android:background="@drawable/green_frame">

                            <ImageView
                                style="@style/wheelStyle"
                                android:src="@drawable/wheel" />
                        </FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/cardViewColorSettingsAndOverviewStyle">

                    <RelativeLayout
                        android:id="@+id/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <FrameLayout
                            android:id="@+id/lightBlue"
                            style="@style/colorPickerSmallPart"
                            android:background="@drawable/frame_for_other_months_weekend_blue" />

                        <FrameLayout
                            style="@style/colorPickerBigPart"
                            android:layout_below="@+id/lightBlue"
                            android:background="@drawable/blue_frame">

                            <ImageView
                                style="@style/wheelStyle"
                                android:src="@drawable/wheel" />
                        </FrameLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/cardViewColorSettingsAndOverviewStyle">

                    <RelativeLayout
                        android:id="@+id/violet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <FrameLayout
                            android:id="@+id/lightViolet"
                            style="@style/colorPickerSmallPart"

                            android:background="@drawable/frame_for_other_months_weekend_violet" />

                        <FrameLayout
                            style="@style/colorPickerBigPart"
                            android:layout_below="@+id/lightViolet"
                            android:background="@drawable/violet_frame">

                            <ImageView
                                style="@style/wheelStyle"
                                android:src="@drawable/wheel" />
                        </FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/cardViewColorSettingsAndOverviewStyle">

                    <RelativeLayout
                        android:id="@+id/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <FrameLayout
                            android:id="@+id/lightGrey"
                            style="@style/colorPickerSmallPart"

                            android:background="@drawable/frame_for_other_months_weekend_grey" />

                        <FrameLayout
                            style="@style/colorPickerBigPart"
                            android:layout_below="@+id/lightGrey"
                            android:background="@drawable/gray_frame">

                            <ImageView
                                style="@style/wheelStyle"
                                android:src="@drawable/wheel" />
                        </FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/colorSettingsDownArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_down_black_48"
            tools:ignore="ContentDescription">

        </ImageView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
