<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="3dp">

        <LinearLayout
            android:id="@+id/list_of_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightRed"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/event_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/lightGrey"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                tools:text="12:00 - 18:00" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventName"
                android:layout_margin="10dp"
                android:padding="1dp">

                <TextView
                    android:id="@+id/event"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000"
                    tools:text="2" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <!--<ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_alarm_black_48"
                    android:id="@+id/alarmClock">

                </ImageView>-->

               <!-- <TextView
                    android:id="@+id/event_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    tools:text="11:00"
                    android:textSize="15sp"
                    />-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="7dp"
                    android:src="@drawable/baseline_create_black_24" />
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>