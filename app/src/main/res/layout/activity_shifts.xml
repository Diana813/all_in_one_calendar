<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:id="@+id/label"
        android:background="@color/grey"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:id="@+id/row">

            <TextView
                style="@style/ShiftsTextViewLabelStyle"
                android:id="@+id/title_label"
                android:text="@string/shift_name"
                />
            <TextView
                style="@style/ShiftsTextViewLabelStyle"
                android:id="@+id/price_label"
                android:text="@string/schedule"
                />
            <TextView
                style="@style/ShiftsTextViewLabelStyle"
                android:id="@+id/quantity_label"
                android:text="@string/alarm"
                />
            <TextView
                style="@style/ShiftsTextViewLabelStyle"
                android:id="@+id/sale_label"
                android:text="@string/edit"
                />
        </LinearLayout>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/empty_shelf_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_access_time_black_48" />

        <TextView
            style="@style/EmptyViewTextStyle"
            android:textColor="@color/grey"
            android:id="@+id/empty_title_text"
            android:layout_below="@id/empty_shelf_image"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="@string/empty_view_title"
            android:textAppearance="?android:textAppearanceMedium" />

    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        app:backgroundTint="#fff"
        android:src="@drawable/baseline_control_point_black_36"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_of_shifts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_below="@+id/label">
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>

