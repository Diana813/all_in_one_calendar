<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lifeAims"
    style="@style/BackgroundLayout.LinearLayoutVerticalStyle"
    android:background="@color/lightOrangeZilla">

    <TextView
        android:id="@+id/question"
        style="@style/textViewHeaders"
        android:gravity="start"
        android:padding="15dp"
        android:text="@string/lifePurpose"
        android:textColor="@color/blackZilla"
        android:textSize="18sp"
        android:textStyle="bold" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_of_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:orientation="vertical"
        android:padding="5dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSearchPhoto"
        style="@style/menuFabStyle"
        android:src="@drawable/baseline_image_search_black_48"
        app:fabCustomSize="45dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddPhoto"
        style="@style/menuFabStyle"
        android:src="@drawable/baseline_add_a_photo_black_36"
        app:fabCustomSize="45dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddImage"
        style="@style/menuFabStyle"
        android:src="@drawable/baseline_add_photo_alternate_black_48"
        app:fabCustomSize="45dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_add_white_48"
        app:backgroundTint="@color/darkOrangeZilla" />

</RelativeLayout>